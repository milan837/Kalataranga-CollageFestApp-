<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EventRegisterActivity.EventRegisterActivity"
    tools:showIn="@layout/activity_event_register">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

    <!-- contact event menu -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp">

    <!-- first layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="Note: "
        android:textColor="@color/titleTextColor"
        android:textSize="14dp" />

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="After the registeration you need to pay the amount to ther cordinator with in one day"
        android:textColor="@color/textColor"
        android:id="@+id/adapter_contact_name"
        android:textSize="16dp"/>

    <!-- event -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="Select Event"
        android:layout_marginTop="10dp"
        android:textColor="@color/titleTextColor"
        android:textSize="14dp"/>

     <Spinner
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
         android:fontFamily="@font/semibold"
         android:id="@+id/spinner"
        android:background="@drawable/edit_text_layout">

    </Spinner>

    <!-- name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="Name"
        android:layout_marginTop="10dp"
        android:textColor="@color/titleTextColor"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:hint="Milan shrestha"
        android:textSize="16dp"
        android:fontFamily="@font/regular"
        android:layout_marginTop="3dp"
        android:textColor="#000000"
        android:inputType="text"
        android:singleLine="true"
        android:id="@+id/name"
        android:background="@drawable/edit_text_layout"/>

    <!-- Branch -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="Branch"
        android:layout_marginTop="10dp"
        android:textColor="@color/titleTextColor"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:hint="CSE"
        android:id="@+id/branch"
        android:textSize="16dp"
        android:fontFamily="@font/regular"
        android:layout_marginTop="3dp"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="#000000"
        android:background="@drawable/edit_text_layout"/>


    <!-- Phone Number -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="Phone Number"
        android:layout_marginTop="10dp"
        android:textColor="@color/titleTextColor"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:hint="90875645753"
        android:textSize="16dp"
        android:id="@+id/number"
        android:fontFamily="@font/regular"
        android:layout_marginTop="3dp"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="#000000"
        android:background="@drawable/edit_text_layout"/>

    <!-- Year -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="Year"
        android:layout_marginTop="10dp"
        android:textColor="@color/titleTextColor"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:hint="1st year"
        android:id="@+id/year"
        android:inputType="text"
        android:singleLine="true"
        android:fontFamily="@font/regular"
        android:textSize="16dp"
        android:layout_marginTop="3dp"
        android:textColor="#000000"
        android:background="@drawable/edit_text_layout"/>

    <!-- Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semibold"
        android:text="Message"
        android:layout_marginTop="10dp"
        android:textColor="@color/titleTextColor"
        android:textSize="14dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:padding="5dp"
        android:paddingLeft="15dp"
        android:hint="Hello message "
        android:textSize="16dp"
        android:id="@+id/message"
        android:inputType="textMultiLine"
        android:fontFamily="@font/regular"
        android:layout_marginTop="3dp"
        android:textColor="#000000"
        android:background="@drawable/edit_text_layout"/>

    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/semibold"
        android:background="@color/greenBtnColor"
        android:elevation="3dp"
        android:id="@+id/processed_btn"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:textColor="#FFF"
        android:text="Proceed"/>

</RelativeLayout>