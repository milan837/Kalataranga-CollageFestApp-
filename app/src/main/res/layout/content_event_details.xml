<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EventDetailsActivity.EventDetailsActivity"
    tools:showIn="@layout/activity_event_details">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="14dp"
        android:layout_marginTop="10dp"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/developer_icon"
                    android:elevation="10dp"
                    android:src="@drawable/events"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <!-- first layout -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="Event Title"
                        android:textColor="@color/titleTextColor"
                        android:textSize="14dp"/>

                    <TextView
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="Air Crash"
                        android:textColor="@color/textColor"
                        android:id="@+id/event_details_title"
                        android:textSize="16dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:background="@drawable/blue_button"
                    android:elevation="3dp"
                    android:textSize="16dp"
                    android:textColor="#FFF"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/adapter_event_particapate_btn"
                    android:text=" + Particapate"/>

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:text="Rs 300"
                    android:textColor="@color/textColor"
                    android:layout_marginLeft="40dp"
                    android:id="@+id/adapter_amount"
                    android:textSize="18dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <!-- about event menu -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="14dp"
        android:layout_marginTop="10dp"
        android:background="#FFF">

        <!-- first layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:text="About The Event"
            android:textColor="@color/titleTextColor"
            android:textSize="14dp"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="Air CrashMilan shrestha is my name.Milan shrestha is my name.Milan shrestha is my name.Milan shrestha is my na"
            android:textColor="@color/textColor"
            android:id="@+id/event_details_description"
            android:textSize="16dp"/>

    </LinearLayout>

    <!-- contact event menu -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="14dp"
        android:layout_marginTop="10dp"
        android:background="#FFF">

        <!-- first layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:text="Contact for Help ?"
            android:textColor="@color/titleTextColor"
            android:textSize="14dp"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:text="Milan Shrestha"
            android:textColor="@color/textColor"
            android:id="@+id/event_details_contact_name"
            android:textSize="16dp"/>

        <Button
            android:layout_marginTop="8dp"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:fontFamily="@font/semibold"
            android:background="@drawable/green_button"
            android:elevation="3dp"
            android:textSize="16dp"
            android:textColor="#FFF"
            android:id="@+id/adapter_event_contact_btn"
            android:text="Call"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

    <!-- Instruction event menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="14dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:background="#FFF">

        <!-- first layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:text="Instruction"
            android:textColor="@color/titleTextColor"
            android:textSize="14dp"/>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="Milan shrestha is my name.Milan shrestha is my name.Milan shrestha is my name.Milan shrestha is my name."
            android:textColor="@color/textColor"
            android:id="@+id/adapter_event_instruction"
            android:textSize="16dp"/>

    </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>