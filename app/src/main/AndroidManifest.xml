        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity
            android:name=".HomeActivity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".EventSchedulingDetails.EventSchedulingActivity"
            android:label="@string/title_activity_event_scheduling"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AllEventActivity.AllEventActivity"
            android:label="@string/title_activity_all_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventDetailsActivity.EventDetailsActivity"
            android:label="@string/title_activity_event_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventRegistrationActivity.EventRegistrationActivity"
